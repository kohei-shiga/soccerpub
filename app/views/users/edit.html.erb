<div class="row mt-4">
  <div class="col-md-5">
    <%= render 'user_card', user: @user, count_followers: @count_followers, count_followings: @count_followings %>
  </div>
  <div class="col-md-7">
    <h2><%= @user.name %>のプロフィール</h2>
    
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :friendly_id, 'ユーザーID' %>
        <%= f.text_field :friendly_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, '画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, '自己紹介' %>
        <%= f.text_field :introduction, class: 'form-control' %>
      </div>
      
      <%= f.submit '更新する', class: 'btn btn-primary btn-block' %>
      <%= link_to 'パスワードの変更はこちらから', new_password_reset_path, class: 'btn btn-danger btn-block' %>
    <% end %>
    <script type="text/javascript">
      $("#user_image").bind("change", function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
          alert("画像ファイルは5MBよりも小さいものにしてください");
          $("#user_image").val("");
        }
      });
    </script>
  </div>
</div>